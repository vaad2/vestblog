<header>
    {% include 'frontend/_includes/qr_code.html' %}
    {% if index %}
      <h1 class="entry-title">
        <a href="{{ article.url }}">{{ article.title }}</a>
      </h1>
    {% else %}
      <h1 class="entry-title">{{ article.title }}</h1>
    {% endif %}
      <p class="meta">{% include 'frontend/_includes/inc_article_time.j2' %}</p>
</header>

{% if index %}
  <div class="entry-content">{{ article.preview|markdown }}</div>
  {% if article.preview != article.content %}
  <footer>
    <a rel="full-article" href="{{ article.url }}">{% trans %}Read On{% endtrans %} &crarr;</a>
  </footer>
  {% endif %}
{% else %}
  <div class="entry-content">{{ article.content }}</div>
{% endif %}
